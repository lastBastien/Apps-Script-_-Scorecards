function emailSend() {

  const sheet = SpreadsheetApp.getActiveSpreadsheet().getSheetByName('Sheet1');
  const sheet2 = SpreadsheetApp.getActiveSpreadsheet().getSheetByName('Learning Opportunities');
    let row = sheet2.getActiveCell().getRow();
    let name = sheet2.getRange(row,1).getDisplayValue();
    let lastCol = sheet2.getLastColumn();
    let arrayQu = [];
    let arrayNo = [];
    let arrayGuru = [];

  // loop to separate quotes and notes from the cell
  for (let i=3; i<lastCol-1;i++){
    if (sheet2.getRange(row,[i]).getValue()!==''){
      let vals = sheet2.getRange(row,[i]).getValue();
      let regexQuotes = /\"([^"]+)\"/g;
      let regexNotes = /\[\w([^\[]+)\]/g;
      let quote = vals.match(regexQuotes);
      let notes = vals.match(regexNotes);
      arrayNo.push(notes);
      arrayQu.push(quote);
        if (notes!==null){
          arrayNo.push(notes);
        }
        if (quote !==null){
      arrayQu.push(quote);
        }
    }
  };
  for (let j=6; j<lastCol; j++){
      let link = sheet2.getRange(row,[j]).getValue();
      arrayGuru.push(link);
      };
  
  Logger.log(arrayQu);
  const TEMPLATE = HtmlService.createTemplateFromFile('emailTest');
    
        // pulls the first name from column 1 based on the active cell
    TEMPLATE.name = name.split(' ')[0];
        // pulls quotes and notes from the applicable array
    if (arrayNo){
      TEMPLATE.quote1 = (arrayQu[0]+' '+arrayNo[0]+' '+arrayGuru[0]);
      TEMPLATE.quote2 = (arrayQu[1]+' '+arrayNo[1]+' '+arrayGuru[1]);
      TEMPLATE.quote3 = (arrayQu[2]+' '+arrayNo[2]+' '+arrayGuru[2]);
    }
    //TEMPLATE.quote = (arrayQu[0]+' '+arrayNo[0]);
    //TEMPLATE.note = arrayNo;

    const message = TEMPLATE.evaluate().getContent();

    let aliases = GmailApp.getAliases(); 
      Logger.log(aliases); 
      Logger.log(name);
      GmailApp.sendEmail('sebastian.burns@guildeducation.com', 'Email Test', "",{
        name: 'QA',
        from: aliases[0],
        htmlBody: message,
        //attachments: [SpreadsheetApp.getActiveSpreadsheet().getAs(MimeType.PDF).setName("Call Review Scorecard")]
      }
      );
    let sendConfirm = sheet2.getActiveCell();
      sendConfirm.setValue('EMAIL SENT');
  }
